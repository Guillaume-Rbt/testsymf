{% extends 'base.html.twig'%}

{% block body %}

<h1> Connexion </h1>


	<form action="{{ path('security_login') }}" method="post">

		<div class="form-group">
			<input type="text" placeholder="Adresse email..." required name="_username" id="username" class="form-control"  >
		</div>

        <div class="form-group mt-4">
			<input type="password" placeholder="Mot de passe" required name="_password" id="password" class="form-control">
		</div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-success">Connexion</button>
			<a href="{{ path('security_registration')}}" type="submit" class="btn btn-secondary">S'inscrire</a>
        </div>


	</form>


{% endblock %}
